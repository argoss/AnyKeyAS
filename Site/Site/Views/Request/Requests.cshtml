@model Site.Models.Requests.RequestListViewModel

<div class="container">
    <div class="row">
        <button type="button" class="btn btn-default" href="@Url.Action("AddRequest", "RequestApi")">Добавить заявку</button>
    </div>
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Request Name</th>
                    <th>Дата поступления</th>
                    <th>Дата исполнения</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model.List)
                {
                    <tr>
                        <td>@request.ClientName</td>
                        <td>@request.CreationDate</td>
                        <td>@request.ExecutionDate</td>
                        <td class="glyphicon glyphicon-pencil"></td>
                        <td calss="glyphicon glyphicon-remove"></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>