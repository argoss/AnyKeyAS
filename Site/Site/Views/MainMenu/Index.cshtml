@using Site.Models.Extensions
@model Site.Models.MainMenu.MainMenuApiConfig

@{
    ViewBag.Title = "Main menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    @Styles.Render("~/Content/styles")
}

<div class="page-header"><h1>@ViewBag.Title</h1></div>

<div class="row" ng-controller='MainMenuCtrl' ng-cloak x-ng-init="controller.init()">
    <div class=" col-md-2 sidebar">
        <nav class="navbar navbar-default sidebar" role="navigation">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="bs-sidebar-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>
                            <a class="active" href="@Url.Action("Index", "Service")">Обслуживание<span style="font-size:16px;" class="pull-right hidden-xs glyphicon glyphicon-wrench"></span></a>
                        </li>
                        <li>
                            <a ng-click="controller.ClientList()">Клиенты<span style="font-size:16px;" class="pull-right hidden-xs glyphicon glyphicon-bookmark"></span></a>
                        </li>
                        <li>
                            <a ng-click="controller.RequestList()">Заявки<span style="font-size:16px;" class="pull-right hidden-xs glyphicon glyphicon-pushpin"></span></a>
                        </li>
                        <li>
                            <a ng-click="controller.UserList()">Пользователи<span style="font-size:16px;" class="pull-right hidden-xs glyphicon glyphicon-user"></span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="col-md-10">
        <div class="panel panel-default">
            <div class="panel-heading" id="panel-heading">
                <span ng-bind="currentItem"></span>
            </div>
            <div class="panel-body">
                <div id="panel-body">
                    <div ng-view></div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.NgPartial("Users", "Users.html")
@Html.NgPartial("Requests", "Requests.html")
@Html.NgPartial("Clients", "Clients.html")
@Html.NgPartial("ClientEdit", "ClientEdit.html")
@Html.NgPartial("UserEdit", "UserEdit.html")
@Html.NgPartial("UserAdd", "UserAdd.html")
@Html.NgPartial("RequestAdd", "RequestAdd.html")
@Html.NgPartial("RequestEdit", "RequestEdit.html")

@section Scripts
{
    @Scripts.Render("~/scriptbundles/main-menu")
}


